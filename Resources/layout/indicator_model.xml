<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardUseCompatPadding="true"
        tools:ignore="UselessParentWithBackground"
        android:id="@+id/cv_indicatorCard">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="Insert Indicator Title Here"
                android:layout_margin="5dp"
                android:textSize="13dp"
                android:id="@+id/txt_indicatorTitle"
                android:layout_centerVertical="true"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="10dp"
                android:background="@drawable/indicatorunansweredmark"
                android:layout_alignParentRight="true"
                android:id="@+id/img_indicatorAnswerStatus"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*X Sub-Indicators"
                android:layout_below="@id/txt_indicatorTitle"
                android:textSize="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/txt_subIndicatorAmount"/>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
