<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#F3F3F3"
        app:cardUseCompatPadding="true"
        tools:ignore="UselessParentWithBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end">

                <ImageView
                    android:src="@drawable/ic_editplan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/editPlans" />

                <ImageView
                    android:src="@drawable/ic_deleteplan"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="30dp"
                    android:id="@+id/deletePlans" />

            </RelativeLayout>
            
            <TextView
                android:text="Action Plan"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtAPName" />

            <TextView
                android:text="Insert Details Here"
                android:textSize="14dp"
                android:clickable="true"
                android:layout_gravity="left"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtAPDetail"
                android:maxLines="3"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>