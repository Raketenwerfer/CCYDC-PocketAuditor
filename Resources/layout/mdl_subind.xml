<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

               <CheckBox
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/cbox_SubIndicator"
                    android:gravity="center_vertical"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardElevation="5dp"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        android:layout_toRightOf="@id/cbox_SubIndicator"
        app:cardBackgroundColor="#FFFFFF"
        tools:ignore="UselessParentWithBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Sub-Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:maxWidth="320dp"
                    android:layout_toRightOf="@+id/cbox_SubIndicator"
                    android:id="@+id/txt_subIndicatorName"/>

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:layout_toRightOf="@+id/cbox_SubIndicator"
                    android:id="@+id/etxt_si_subIndicatorInput"/>

            </RelativeLayout>

            
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>
