<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">


            <ImageButton
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_arrow_back_black_24"
                android:background="@android:color/transparent"
                android:foregroundGravity="center_horizontal|left"
                android:clickable="true"
                android:id="@+id/imgtbn_SC_Back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:textSize="26dp"
                android:id="@+id/displayCategoryName"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"/>
        
        </RelativeLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recView_UnsortedIndicators"
        android:layout_marginBottom="10dp">
    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sub-Categories"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginBottom="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recView_SubCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
