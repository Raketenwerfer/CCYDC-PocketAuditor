<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">
     
    <TextView
        android:text="@string/titleMenu"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:textColor="@android:color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/white"
        android:text="Select a Chapter/Barangay"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="140dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#EfEfEf"
        android:id="@+id/ChapterSelectSpinner"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="170sp"
            android:layout_height="170sp"
            android:padding="10sp"
            app:cardCornerRadius="50dp"
            android:elevation="10dp"
            app:cardBackgroundColor="#E3E3E3"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:id="@+id/cardStart">

        <ImageButton
            android:layout_gravity="center"
            android:text="@string/btn_begin_audit"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/BeginAuditButton"
            android:textColor="@android:color/white"
            android:backgroundTint="#333333"
            android:background="@drawable/ic_editplan"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BEGIN AUDIT"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/cardStart"
            android:textAlignment="center"
            android:textSize="20sp"/>

   </RelativeLayout>

</LinearLayout>