<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">


            <ImageButton
                android:layout_width="25dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_arrow_back_black_24"
                android:background="@android:color/transparent"
                android:foregroundGravity="center_horizontal|left"
                android:clickable="true"
                android:id="@+id/imgtbn_SI_Back"/>
        
        </RelativeLayout>

    </LinearLayout>

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Indicator Name"
                android:textSize="20dp"
                android:padding="5dp"
                android:id="@+id/displayIndicatorName"
                android:textColor="@android:color/black"
                android:gravity="center_horizontal"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recView_SubIndicators"
        android:scrollbars="vertical" >



    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>
