<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#E0DEE5">

        <TextView
            android:text="ADD NEW CATEGORY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:textSize="23sp"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <TextView
                android:text="Category Number:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="30dp"/>

            <EditText
                android:inputType="number"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="190dp"
                android:gravity="center_horizontal"
                android:layout_alignParentRight="true"
                android:id="@+id/ACNumber_eT" />

        </RelativeLayout>

        <TextView
            android:text="Action Plans:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <ListView
            android:layout_width="244dp"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/ListView_actionPlans" />

        <TextView
            android:text="Category Name:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <EditText
            android:inputType="textMultiLine"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ACName_eT" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:text="save"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="150dp"
                android:id="@+id/AddCa_btnSave" />

            <Button
                android:text="cancel"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/btnCancel" />

        </RelativeLayout>


        <TextView
            android:text="Category Questions:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:src="@drawable/ic_AQ"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_marginLeft="320dp"
            android:id="@+id/AddQuestion" />


        <EditText
            android:inputType="textMultiLine"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ACQuestion_eT" />



    </LinearLayout>

</androidx.core.widget.NestedScrollView>
